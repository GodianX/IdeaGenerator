{% extends 'base.html.twig' %}

{% block title %}Генератор идей!{% endblock %}

{% block body %}
    <div class="trapezoidUp"></div>
    <div class="content">
        {#<div class="triangleUp"></div>#}
        <div class = "dvline"></div>
        <div class = "dvline2"></div>
        <div class="container-fluid">
            <div class="row">
                <div class ="col-xl-3">
                    <form action="{{path('generator')}}" method="get">
                        <input type="image" src="{{ asset('build/img/1.png') }}" alt="Submit" width="48" height="48">
                    </form>
                </div>
                <div class ="col-xl-6 ">
                    <h3>Нажмите на лампочку</h3>
                </div>
                <div class ="col-xl-3"></div>
            </div>
            <div class="row">
                <div class ="col-xl-3"></div>
                <div class ="col-xl-6 example-wrapper">
                    {% if idea is defined and idea is not null %}
                    <h1>{{ idea }}!</h1>
                    {% endif %}
                    {% if idea is defined and idea is null %}
                        <h1>Тут может быть ваша идея!</h1>
                    {% endif %}
                </div>
                <div class ="col-xl-3"></div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="triangleDown"></div>
        <div class="trapezoidDown"></div>
    </div>
    {#<div class = "quadrilateralDown"></div>#}
{% endblock %}
